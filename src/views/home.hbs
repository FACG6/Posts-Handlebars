<form action="/add-post" method="post" class="sendPost-form">
    <textarea name="post-area" class="post-area" cols="55" rows="5" placeholder="Enter your thoughts" class="post-area"></textarea>
    <input type="submit" value="Post">
</form>
<div class="posts-div">
    {{#each posts}}
    <div class="post">{{this.post}}</div>
    {{/each}}
</div>
